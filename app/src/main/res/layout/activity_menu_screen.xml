<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#52B5EA">

    <Button
            android:text="Play Game"
            android:layout_width="341dp"
            android:layout_height="78dp" android:id="@+id/PlayButton"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:textSize="36sp" android:layout_marginTop="319dp"
            android:layout_marginEnd="32dp" android:layout_marginRight="32dp" android:layout_marginBottom="160dp"
            app:layout_constraintVertical_bias="0.0"/>
    <Button
            android:text="Quit Game"
            android:layout_width="341dp"
            android:layout_height="78dp" android:id="@+id/QuitButton"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.542"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.663"
            android:textSize="36sp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/word_art__2_" android:id="@+id/imageView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="216dp"
            app:layout_constraintHorizontal_bias="1.0" app:layout_constraintVertical_bias="0.0"/>
</androidx.constraintlayout.widget.ConstraintLayout>