<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <Button
            android:text="Animals"
            android:layout_width="366dp"
            android:layout_height="112dp" android:id="@+id/AnimalsButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toTopOf="@+id/button8"
            app:layout_constraintHorizontal_bias="0.511" app:layout_constraintVertical_bias="0.614"/>
    <Button
            android:text="History"
            android:layout_width="367dp"
            android:layout_height="116dp" android:id="@+id/HistoryButton"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/button" android:layout_marginBottom="20dp"/>
    <Button
            android:text="Sports"
            android:layout_width="367dp"
            android:layout_height="116dp" android:id="@+id/button"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/MythologyButton" android:layout_marginBottom="16dp"
    />
    <Button
            android:text="Mythology"
            android:layout_width="367dp"
            android:layout_height="116dp" android:id="@+id/MythologyButton"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/SuperHerosButton" android:layout_marginBottom="24dp"
    />
    <Button
            android:text="Superheros"
            android:layout_width="367dp"
            android:layout_height="116dp" android:id="@+id/SuperHerosButton"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginBottom="32dp"
            app:layout_constraintHorizontal_bias="0.522"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline" app:layout_constraintGuide_begin="20dp"
                                                android:orientation="vertical"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline2" app:layout_constraintGuide_begin="20dp"
                                                android:orientation="vertical"/>
</androidx.constraintlayout.widget.ConstraintLayout>